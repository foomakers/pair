{
  "extends": "@pair/ts-config/node.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "#config": ["src/config/index.ts"],
      "#config/*": ["src/config/*"],
      "#registry": ["src/registry/index.ts"],
      "#registry/*": ["src/registry/*"],
      "#kb-manager": ["src/kb-manager/index.ts"],
      "#kb-manager/*": ["src/kb-manager/*"],
      "#diagnostics": ["src/diagnostics.ts"],
      "#test-utils": ["src/test-utils/index.ts"],
      "#test-utils/*": ["src/test-utils/*"],
      "#ui": ["src/ui/index.ts"],
      "#ui/*": ["src/ui/*"]
    }
  },
  "references": [
    { "path": "../../packages/content-ops" },
    { "path": "../../packages/knowledge-hub" }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
