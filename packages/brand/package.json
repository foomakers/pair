{
  "name": "@pair/brand",
  "version": "0.4.1",
  "private": true,
  "description": "Brand identity component library for Pair - design tokens, React components, and Tailwind preset",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./tokens.css": "./src/tokens/tokens.css",
    "./tailwind-preset": "./src/tailwind-preset.ts"
  },
  "files": [
    "src",
    "public"
  ],
  "scripts": {
    "dev": "pnpm clean:server && vite dev",
    "clean:server": "lsof -t -c node -i:5173 | xargs kill 2>/dev/null || true",
    "ct": "playwright test -c playwright-ct.config.ts --grep-invert @a11y-report",
    "a11y:report": "playwright test -c playwright-ct.config.ts --grep @a11y-report --reporter=list",
    "a11y:report:html": "playwright test -c playwright-ct.config.ts --grep @a11y-report --reporter=html && echo '\nâ†’ Report: playwright-report/index.html\n  Open: npx playwright show-report'",
    "test": "vitest run && playwright test -c playwright-ct.config.ts --grep-invert @a11y-report",
    "test:coverage": "vitest run --coverage",
    "ts:check": "tsc --noEmit",
    "lint": "lint",
    "lint:fix": "lint-fix",
    "prettier:fix": "prettier-fix",
    "prettier:check": "prettier-check",
    "mdlint:check": "markdownlint-check",
    "mdlint:fix": "markdownlint-fix"
  },
  "peerDependencies": {
    "next-themes": "^0.4",
    "react": "^19",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "next-themes": "catalog:",
    "@pair/eslint-config": "workspace:*",
    "@pair/prettier-config": "workspace:*",
    "@pair/markdownlint-config": "workspace:*",
    "@pair/ts-config": "workspace:*",
    "@axe-core/playwright": "catalog:",
    "@playwright/experimental-ct-react": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "autoprefixer": "catalog:",
    "jsdom": "catalog:",
    "postcss": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vitest-axe": "catalog:"
  },
  "prettier": "@pair/prettier-config"
}
